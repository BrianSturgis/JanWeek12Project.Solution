

@model PierreTreats.Models.Flavor

<h2>Flavor Details</h2>
<h2>@Html.ActionLink("Flavor:", "Index")<br/>@Model.FlavorDescription</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.FlavorDescription)</h3> 


@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor does not have any Treats added</p>
}
else
{
  <h4>Treats for this Flavor:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Flavor.FlavorTreat</li>
    @using (Html.BeginForm("Delete treate", "Treats"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

<p>@Html.ActionLink("Add a treat", "AddTreat", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>